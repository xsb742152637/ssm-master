    <!-- 目的：为dao接口方法提供sql语句配置 -->
    <select id="getMenuTree" resultType="java.util.HashMap">
        select a.MENU_ID,a.MENU_LEVEL,a.OUTLINE_LEVEL,a.TITLE,ui.CODE,ui.URL_ID,ui.URL,ui.PARAMETER
        from core_menu_tree_info a left join core_menu_url_info ui on a.URL_ID=ui.URL_ID
        where a.IS_SHOW=1
        order by a.OUTLINE_LEVEL,a.MENU_LEVEL
    </select>
</mapper>